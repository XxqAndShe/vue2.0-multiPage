#login,body,html{width:100%;height:100%}#login{background:url(/app/img/Sign_bj.0256aa3.jpg) no-repeat 50%;position:relative;top:0;left:0}#login .login-box{width:360px;height:375px;position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);box-shadow:0 0 10px #ccc;background:#fff;padding:30px 0 0 30px;box-sizing:border-box}#login .login-box h1{position:absolute;top:-85px;left:100px;text-shadow:3px 1px 5px #666}#login .login-box .title{font-size:20px;color:#444}#login .login-box .info{font-size:12px;color:red}#login .login-box .login-accound{float:left;width:300px;height:40px;border:1px solid #ccc;margin-top:24px;position:relative}#login .login-box .login-accound i{display:block;width:100%;height:100%}#login .login-box .login-accound label{float:left;width:40px;height:40px;line-height:50px;text-align:center}#login .login-box .login-accound input{font-size:14px;float:left;width:255px;height:40px;line-height:40px;padding:2px 26px 2px 2px;box-sizing:border-box;border:none;outline:none}#login .login-box .fixd-password{margin:15px 0;height:auto;float:left;width:300px;height:40px;margin-top:24px;position:relative}#login .login-box .fixd-password label{font-size:12px;color:#000}#login .login-box .confirm-login{float:left;width:300px;height:40px;margin-top:24px;position:relative;border:none;margin-top:0}#login .login-box .confirm-login button{width:100%;height:100%;color:#fff;background:#0d85e4;font-size:18px}