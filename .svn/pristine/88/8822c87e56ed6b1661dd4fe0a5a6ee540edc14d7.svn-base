<script>
import Viewer from 'viewerjs'
import initSocket from '../../socket'
import notice from '../../utils/notice'
import { refresh, orderAccept, orderDenied } from '../../api/order'

export default {
  data () {
    return {
      mainLoading: true,
      baseUrl: process.env.BASE_URL,
      collapseMenu: false,
      framePath: '/order/proxy.html',
      dialogTableVisible: false,
      dialogType: '', // 弹窗类型
      gridData: [], // 弹窗数据
      columns: [], // 表格header
      orderData: [], // 接单相关信息
      orderForms: [], // 订单的用户输入
      detailImg: [], // 描述图片
      orderAcceptDialogVisible: false, // 弹窗显示隐藏
      dialogMsg: '您有一笔新订单'
    }
  },
  created () {
    notice.init()
    var path = decodeURIComponent(location.hash.substring(1))
    this.framePath = path || '/order/proxy.html'
  },
  mounted () {
    console.log(Viewer)
    // 监听iframe窗口的消息
    this.$nextTick(function () {
      this.$refs.iframe.addEventListener('load', () => {
        this.mainLoading = false
        location.hash = encodeURIComponent(this.framePath)
      })
      // this.$layer.url({ content: '/organizational/coupon-definition.html' })
      // RibitMQ
      const acount = {
        acount: 'admin',
        password: 'admin123',
        id: 18
      }
      initSocket(acount, this.connect, this.error)
    })
    // 刷新token
    this.checkUserLogin()
    this.doRefresh()
    // 是否有接单dialog弹窗
    this.isDialog()
  },
  methods: {
    go: function (path) {
      if (path === this.framePath) return false
      this.mainLoading = true
      this.framePath = path
      location.hash = encodeURIComponent(path)
    },
    connect (data) {
      data = JSON.parse(data)
      console.log(data)
      switch (data.biz) {
        case 'Shop':
          this.$notify({
            title: data.title,
            message: '',
            type: 'success',
            duration: 0
          })
          break
        case 'Discount':
          this.$notify({
            title: data.title,
            message: '',
            type: 'success',
            duration: 0
          })
          break
        case 'Order':
          let arr = []
          // 判断是否存在localOrder
          let orderData = localStorage.getItem('localOrder')
          if (orderData && orderData.length > 1) {
            arr = JSON.parse(orderData)
          }
          // 存储data
          arr.push(data)
          arr = JSON.stringify(arr)
          localStorage.setItem('localOrder', arr)
          this.isDialog()
          break
      }
    },
    // 弹出dialog
    setLog (param) {
      let data = JSON.parse(param)
      this.orderData = JSON.parse(data[0].content)
      this.detailImg = [] // 清零防止累加
      this.orderForms = this.orderData.dynamicForms
      this.orderForms.forEach(item => {
        if (item.dataType === 'images' && item.value) {
          this.detailImg = item.value.split(',')
        }
      })
      this.orderAcceptDialogVisible = true
      /* eslint-disable */
      this.$nextTick(function () {
        console.log(this.$refs.orderImages[0])
        new Viewer(this.$refs.orderImages[0])
      })
      /* eslint-enable */
    },
    // 是否出现dialog弹窗
    isDialog () {
      let data = localStorage.getItem('localOrder')
      if (data && JSON.parse(data).length > 0) { // 存在订单没有处理
        this.setLog(data)
      }
    },
    // 接单
    setAccept () {
      let arrData = JSON.parse(localStorage.getItem('localOrder'))
      let code = arrData[0].bizValue
      console.log(code)
      orderAccept(code).then(data => {
        console.log(data)
        if (data.success) {
          this.$message.success('操作成功')
          this.orderAcceptDialogVisible = false
          // 处理localStorage
          arrData.shift()
          localStorage.setItem('localOrder', JSON.stringify(arrData))
          this.isDialog()
        } else {
          this.$message.error(data.message)
        }
      })
    },
    // 拒单
    setRefuse () {
      let arrData = JSON.parse(localStorage.getItem('localOrder'))
      let code = arrData[0].bizValue
      orderDenied(code).then(data => {
        console.log(data)
        if (data.success) {
          this.$message.success('操作成功')
          this.orderAcceptDialogVisible = false
          // 处理localStorage
          arrData.shift()
          localStorage.setItem('localOrder', JSON.stringify(arrData))
          this.isDialog()
        } else {
          this.$message.error(data.message)
        }
      })
    },
    error () {
      console.log('error')
    },
    // 刷新token
    checkUserLogin () {
      refresh().then(data => {
        if (data.success) { // 通过
          localStorage.setItem('token', data.data)
        } else { // 不通过
          this.$message.error('服务器异常，请联系管理员')
          setTimeout(() => {
            window.location.href = window.origin + '/entry.html'
          }, 1000)
        }
      })
    },
    // 2分钟刷新一次token
    doRefresh () {
      setTimeout(() => {
        this.checkUserLogin()
        this.doRefresh()
      }, 1000 * 120)
    },
    // 退出登录
    doExitLogon: function () {
      localStorage.removeItem('token')
      localStorage.removeItem('metaSeed')
      window.location.href = window.origin + '/entry.html'
    }
  }
}
</script>

