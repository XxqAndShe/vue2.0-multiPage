#login{
  width: 100%;
  height: 100%;
  background:url(/static/images/Sign_bj.jpg) no-repeat center;
  position: relative; 
  top: 0;
  left: 0;
  .login-box{
    h1{
      position: absolute;
      top: -85px;
      left: 100px;
      text-shadow: 3px 1px 5px #666;
    }
    width: 360px;
    height: 375px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -180px;
    margin-top: -190px;
    box-shadow: 0 0 10px #ccc;
    background: #fff;
    padding: 30px 0 0 30px;
    box-sizing: border-box;
    .title{
      font-size: 20px;
      color: #444;
    }
    .login-accound{
      float: left;
      width: 300px;
      height: 40px;
      border: 1px solid #ccc;
      margin-top: 24px;
      position: relative;
      i{
        display: block;
        width: 100%;
        height: 100%;
      }
      label{
        float: left;
        width: 40px;
        height: 40px;
        .user{
          background: url(/static/images/yonhu.png) no-repeat 50%;
        }
        .password{
          background: url(/static/images/mima.png) no-repeat 50%;
        }
      }
      input{
        font-size: 14px;
        float: left;
        width: 255px;
        height: 40px;
        line-height: 40px;
        padding: 2px 26px 2px 2px;
        box-sizing: border-box;
        border: none;
        outline: none;
      }
    }
    .fixd-password{
      margin: 15px 0;
      height: auto;
      float: left;
      width: 300px;
      height: 40px;
      margin-top: 24px;
      position: relative;
      label{
        font-size: 12px;
        color: #000;
      }
    }
    .confirm-login{
      float: left;
      width: 300px;
      height: 40px;
      margin-top: 24px;
      position: relative;
      border: none;
      margin-top: 0;
      a{
        display: block;
        width: 100%;
        height: 100%;
        line-height: 40px;
        text-align: center;
        text-decoration: none;
        color: #fff;
        background: #0d85e4;
        font-size: 18px;
      }
    }
  }
}